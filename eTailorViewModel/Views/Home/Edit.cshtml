@model LibrarieModele.Product

@{
    ViewBag.Title = "Edit";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>

    @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Product_Id) <!-- Include the Product_Id as a hidden field -->

        <div>
            <label for="Product_Name">Product Name:</label>
            @Html.TextBoxFor(model => model.Product_Name)
            @Html.ValidationMessageFor(model => model.Product_Name)
        </div>

        <div>
            <label for="Description">Description:</label>
            @Html.TextBoxFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div>
            <label for="Price">Price:</label>
            @Html.TextBoxFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price)
        </div>

        <!-- Add more input fields as needed -->

        <div>
            <!-- Display the current product image -->
            <label for="Image_URL">Current Image:</label>
            <img src="@Model.Image_URL" alt="Current Product Image" class="img-thumbnail" />
        </div>

        <div>
            <!-- Provide a way to update the product image -->
            <label for="NewImage">New Image URL:</label>
            @Html.TextBoxFor(model => model.Image_URL, new { type = "url" })
            @Html.ValidationMessageFor(model => model.Image_URL)
        </div>

        <div>
            <input type="submit" value="Save Changes" />
        </div>
    }
</main>
