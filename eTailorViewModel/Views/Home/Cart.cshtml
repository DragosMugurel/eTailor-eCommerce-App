@model List<LibrarieModele.Product>

@{
    ViewBag.Title = "Cart";
}
<style>
    .cart-list {
        list-style: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .cart-item {
        width: 200px;
        margin: 10px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        text-align: center;
    }

        .cart-item img {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }
</style>

<div class="container mt-5">
    <h2>Shopping Cart</h2>

    @if (Model.Any())
    {
        <ul class="cart-list">
            @foreach (var product in Model)
            {
                <li class="cart-item">
                    <img src="@product.Image_URL" alt="@product.Product_Name" />
                    <h5>@product.Product_Name</h5>
                    <p>@product.Description</p>
                    <p><strong>Price:</strong> @string.Format("€{0:N2}", product.Price)</p>

                    <div class="btn-group">
                        @Html.ActionLink("Details", "Details", new { id = product.Product_Id }, new { @class = "btn btn-outline-primary btn-sm" })
                        @Html.ActionLink("Remove from Cart", "RemoveFromCart", new { id = product.Product_Id }, new { onclick = "return confirm('Are you sure you want to remove this item from the cart?');", @class = "btn btn-outline-danger btn-sm" })
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Your shopping cart is empty.</p>
    }

    <div class="mt-3">
        @Html.ActionLink("Continue Shopping", "Index", "Home", new { area = "" }, new { @class = "btn btn-primary" })
    </div>
