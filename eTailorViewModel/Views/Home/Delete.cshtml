@model LibrarieModele.Product

<h2>Delete Product</h2>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.Product_Name)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Product_Name)
    </dd>

    <!-- Add other fields as needed -->

