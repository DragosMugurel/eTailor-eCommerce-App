@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="featuredProductsTitle">
        <h1 id="featuredProductsTitle">Featured Products</h1>
        <p class="lead">Discover our latest and greatest products that are just a click away.</p>
        <p><a href="/products" class="btn btn-primary btn-md">Explore Products &raquo;</a></p>
    </section>

    <div class="row">
        <section class="col-md-4" aria-labelledby="newArrivalsTitle">
            <h2 id="newArrivalsTitle">New Arrivals</h2>
            <p>Check out our newest additions to the collection.</p>
            <p><a class="btn btn-outline-dark" href="/products/new">View New Arrivals &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="bestSellersTitle">
            <h2 id="bestSellersTitle">Best Sellers</h2>
            <p>Explore our top-rated and most loved products.</p>
            <p><a class="btn btn-outline-dark" href="/products/best-sellers">See Best Sellers &raquo;</a></p>
        </section>
        <section class="col-md-4" aria-labelledby="discountsTitle">
            <h2 id="discountsTitle">Special Discounts</h2>
            <p>Save big with our limited-time offers and discounts.</p>
            <p><a class="btn btn-outline-dark" href="/products/discounts">Check Discounts &raquo;</a></p>
        </section>
    </div>
</main>

